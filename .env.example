# Environment Configuration Template
# Copy this file to .env and fill in your values

# Application
ENVIRONMENT=development
SECRET_KEY=change-me-in-production-use-long-random-string
DEBUG=true

# Database
DATABASE_URL=postgresql://scanner:scanner@localhost:5432/scanner
# For SQLite (development only):
# DATABASE_URL=sqlite+aiosqlite:///./scanner.db

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
JWT_SECRET_KEY=another-secret-key-for-jwt
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Scanner Configuration
SCANNER_CONCURRENT_REQUESTS=10
SCANNER_MAX_PAYLOADS=100
SCANNER_TIMEOUT=30

# Monitoring
PROMETHEUS_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Plugin System
PLUGINS_DIR=src/plugins
ENABLE_PLUGIN_HOTRELOAD=true

# Celery (for async tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# External Services (optional)
# AWS_SECRET_ACCESS_KEY=
# AWS_ACCESS_KEY_ID=
# SENTRY_DSN=

# =============================================
# NEW FEATURES CONFIGURATION
# =============================================

# AI Report Narrator
# Choose provider: gemini, openai, anthropic
AI_PROVIDER=gemini
AI_MODEL=models/gemini-2.0-flash

# Google Gemini API Key
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=

# OpenAI API Key (alternative)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API Key (alternative)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# AI Report Settings
AI_REPORT_LANGUAGE=en  # en, tr, de, fr, es
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7

# Authenticated Scanning
# Default auth settings
AUTH_SESSION_TIMEOUT=3600
AUTH_AUTO_REFRESH=true

# CVSS Configuration
CVSS_AUTO_CALCULATE=true
CVSS_DEFAULT_VERSION=3.1

# PoC Generator
POC_INCLUDE_PYTHON=true
POC_INCLUDE_CURL=true
POC_INCLUDE_BURP=true
POC_OBFUSCATE_PAYLOAD=false

# CI/CD Integration
SARIF_ENABLED=true
CI_SEVERITY_THRESHOLD=high  # critical, high, medium, low
CI_FAIL_ON_VULNERABILITY=true

